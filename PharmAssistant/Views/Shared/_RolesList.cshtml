@model IQueryable<PharmAssistant.Models.AppRole>

@{
	int SrNo = 1;
}

@if (Model != null && Model.Count() > 0)
{
	<table class="table table-hover">
		<thead>
			<tr>
				<th>Sr. No.</th>
				<th>Role</th>
				<th>Users</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var role in Model)
			{
				<tr>
					<td>@(SrNo++)</td>
					<td>@role.Name</td>
					<td>
						@foreach(var user in role.Users)
						{
							@user.UserId <br/>
						}					
					</td>
					<td>
						@Html.ActionLink("Edit", "Edit", "RoleAdmin", new { id = role.Id }, new { @class = "label label-primary" })
						@Html.ActionLink("Delete", "DeleteRole", "RoleAdmin", new { id = role.Id }, new { @class = "label label-danger", onclick = "return confirm('Are you sure to delete record of \"" + role.Name.Trim() + "\" role?')" })
					</td>
				</tr>
			}
		</tbody>
	</table>
}
