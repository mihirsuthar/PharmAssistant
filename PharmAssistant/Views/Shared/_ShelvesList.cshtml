@model ICollection<PharmAssistant.Models.Shelf>

@{
	int SrNo = 1;
}

@if (Model != null && Model.Count > 0)
{
	<table class="table table-hover">
		<thead>
			<tr>
				<th>Sr. No.</th>
				<th>Shelf Number</th>
				<th>Shelf Name</th>
				<th>Action</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var shelf in Model)
			{
				<tr>
					<td>@(SrNo++)</td>
					<td>@shelf.ShelfNumber</td>
					<td>@shelf.ShelfName</td>
					<td>
						@Html.ActionLink("Delete", "DeleteShelf", "Medicines", new { id = shelf.ShelfId }, new { @class = "label label-danger", onclick = "return confirm('Are you sure to delete record of \"" + shelf.ShelfName.Trim() + "\" shelf?')" })
					</td>
				</tr>
			}
		</tbody>
	</table>
}
else
{
	<span class="alert alert-warning">No shelves have been defined yet.</span><br /><br />
}

